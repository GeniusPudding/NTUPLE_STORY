<SealScreen>:
    canvas:
        Color:
            rgba:.2,.2,.2,.4
        Rectangle:
            pos: self.pos
            size: self.size     
    Label:
        color: 1,1,1,1
        text:root.title
        pos_hint:{'x':.25,'y':.4}
        size_hint:(.5,.3)
        halign:'center'
        valign:'center'
        font_size: 184
        font_name: 'res/HuaKangTiFan-CuTi-1.otf'  
        
<PrologueScreen>:
    canvas:
        Rectangle:
            source:'res/images/new_dialogframe.png'
            pos: (0,0)
            size: (root.w*root.dialogframe_width,root.h*(root.dialogframe_height+.07))
            group:'fix'

        Color:
            rgba: .2,.2,.2,.4
            group:'seal' 
        Rectangle:
            pos: self.pos
            size: self.size
            group:'seal'  
    Label:
